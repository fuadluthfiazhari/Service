<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/catur"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="80dp"
                app:srcCompat="@mipmap/joker"
                android:layout_gravity="center"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Fuad Azhari"
                android:background="#000"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:layout_marginLeft="133dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#FFF"/>
        <TextView
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="wrap_content"
                android:textSize="21dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:layout_marginRight="20dp"
                android:background="#000"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Instagram"
                    android:layout_marginTop="10dp"
android:background="@mipmap/igg"
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/btn_ig"
                    android:layout_weight="1"/>
            <Button
                    android:text="Facebook"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/fb"
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/btn_fb"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="MP3 Player"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:background="#000"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/textView4"/>


        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Play"
                    android:background="@mipmap/ps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_play" android:layout_weight="1"/>
            <Button
                    android:text="Pause"
                    android:background="@mipmap/py"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_pause" android:layout_weight="1"/>
            <Button
                    android:text="Stop"
                    android:layout_marginRight="35dp"
                    android:background="@mipmap/stp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_stop" android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>